.ImageList
  .ImageListItem
    transform: scale(1)
    transition: 400ms $expo

    &:hover
      hoverShadow()
      transform: scale(1.025)

  .image
    border-bottom: pxToRem(1) solid rgba($flint, .25)
    position: relative
    img
      display: block
      height: 100%
      width: 100%

  .TextArea
    background: $paper
    padding: $sm

// References / Moodboard
.ImageList.references
  column-count: 1
  column-gap: 0
  padding: 0

  +above($break-sm)
    column-count: 2

  +above($break-md)
    column-count: 3

  +above($break-lg)
    column-count: 4

  +above($break-xl)
    column-count: 5

  .ImageListItem
    break-inside: avoid
    margin: 0 $sm $md $sm

// Storyboard
.ImageList.storyboards
  display: flex
  justify-content: space-between
  flex-wrap: wrap

  .ImageListItem
    flex: 0 0 'calc(50% - %s)' % ($md*2)
    margin: 0 $md $lg $md
